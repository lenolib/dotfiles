{
    "workbench.colorCustomizations": {
        "tab.activeBorder": "#ff0000",
        "tab.unfocusedActiveBorder": "#000000",
        "tab.activeBackground": "#1a396b"
    },
    "keyboard.dispatch": "keyCode",
    "sublimeTextKeymap.promptV3Features": true,
    "window.title": "${dirty}${activeEditorLong}${separator}${rootName}${separator}${appName}",
    "prettier.singleQuote": true,
    "prettier.trailingComma": "es5",
    "prettier.proseWrap": "always",
    "editor.formatOnSave": false,
    "explorer.autoReveal": false,
    "python.formatting.provider": "black",
    "editor.lineDecorationsWidth": 0,
    "editor.rulers": [
        80,
        93,
        120
    ],
    // Enable per-language
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[python]": {
        "editor.formatOnSave": true,
    },
    "[javascript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
          },
    },
    "[typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
          },
    },
    "[typescriptreact]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
            "source.fixAll": "always",
          },
    },    
    "[json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[sql]": {
        "editor.defaultFormatter": "mtxr.sqltools"
    },
    "extensions.ignoreRecommendations": false,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Monokai",
    "vscode_custom_css.imports": [
        "file:///home/lennart/.vscode/workbench-filetree.css"
    ],
    "typescript.disableAutomaticTypeAcquisition": true,
    "editor.parameterHints.enabled": false,
    "typescript.tsserver.log": "off",
    "breadcrumbs.enabled": true,
    "workbench.startupEditor": "none",
    "scm.autoReveal": false,
    "editor.bracketPairColorization.enabled": true,
    "javascript.suggest.autoImports": false,
    "extensions.autoUpdate": false,
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "prettier.requireConfig": true,
    "explorer.confirmDragAndDrop": false,
    "vscode-graphql.showExecCodelens": false,
    "javascript.inlayHints.parameterNames.enabled": "literals",
    "typescript.inlayHints.parameterNames.enabled": "none",
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.inlineSuggest.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "githubPullRequests.pullBranch": "never",
    "git.autofetch": true,
    "hediet.vscode-drawio.resizeImages": null,
    "hediet.vscode-drawio.theme": "Kennedy",
    "githubPullRequests.fileListLayout": "tree",
    "coverage-gutters.showRulerCoverage": true,
    "livePreview.portNumber": 3005,
    "search.useParentIgnoreFiles": true,
    "workbench.editor.enablePreview": false,
    "[typescript][typescriptreact]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit"
        }
    },
    "editor.wordWrap": "on",
    "[mjml]": {
        "editor.defaultFormatter": "mjmlio.vscode-mjml"
    },
    "mjml.switchOnSeparateFileChange": false,
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "window.zoomLevel": 1,
    "git.replaceTagsWhenPull": true,
    "workbench.tree.indent": 28,
    "diffEditor.hideUnchangedRegions.enabled": true,
    "diffEditor.ignoreTrimWhitespace": true
}